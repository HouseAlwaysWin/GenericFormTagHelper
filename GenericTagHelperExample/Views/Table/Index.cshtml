@model CustomerViewModel
<br />
<form generic form-model="@Model.SearchBar"
      form-title=""
      asp-controller="Table"
      asp-action="Index"
      select-data-list="{
        searchselectlist:{
            1:'Id',
            2:'Email'
        }, 
      }"
      method="get"
      class="input-group">
    <span class="input-group-btn">
        <button class="btn btn-default" type="submit">
            <span class="glyphicon glyphicon-search"></span>
        </button>
    </span>
</form>


<table generic
       class="panel panel-primary"
       items="@Model.ItemsJson"
       item-per-page="@Model.ItemPerPage"
       current-page="@Model.Page"
       table-head-data="['Id @Model.Id','Name @Model.Name','Gender','Edit']"
       table-sort-data="['Gender','Name','Id']"
       table-hidden-columns="[]"
       table-primary-key="Id"
       table-cols-number="5"
       table-show-index="true"
       active-panel="true"
       active-panel-heading="true"
       panel-heading-content="Customer"
       content-tag="{
            data_col_4:'hello*'
       }"
       attrs-tag="{
        index_data:{style:'color:pink;'},
        body_row_4:{style:'color:red;'},
        body_data_col_3:{style:'color:green;'}
       }"></table>

<pagination total-items="@Model.TotalItems"
            current-page="@Model.Page"
            item-per-page="@Model.ItemPerPage"
            page-query-options="{
                SearchItem:'@Model.SearchItem' ,
                searchtype:'@Model.SearchType',
                sorttype:'@Model.SortType',
                issortdescending:'@Model.IsSortDescending'}"
            page-action="Index">
</pagination>